# Database Configuration
DATABASE_URL=postgresql://finance_user:your_password_here@localhost:5432/finance_planner
# Example for local PostgreSQL: postgresql://user:password@localhost:5432/database_name
# Example for SQLite (dev only): sqlite:///./finance_planner.db

# JWT Configuration (MUST match MCP_Auth SECRET_KEY)
SECRET_KEY=your-super-secret-key-shared-with-mcp-auth-min-32-chars
# CRITICAL: This must be identical to MCP_Auth's SECRET_KEY for JWT validation
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"

# Application Settings
APP_NAME=Finance Planner API
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# CORS Settings (if needed for frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Database Pool Settings (Production)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20